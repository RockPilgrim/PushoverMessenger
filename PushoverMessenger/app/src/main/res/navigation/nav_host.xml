<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_host"
    app:startDestination="@id/sendFragment">

    <fragment
        android:id="@+id/sendFragment"
        android:name="my.rockpilgrim.pushovermessenger.ui.SendFragment"
        tools:layout="@layout/send_fragment" >
        <action
            android:id="@+id/action_sendFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="my.rockpilgrim.pushovermessenger.ui.HistoryFragment"
        tools:layout="@layout/history_fragment" />

</navigation>